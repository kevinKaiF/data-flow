<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">

    <context:property-placeholder location="classpath:application.properties"/>

    <context:component-scan base-package="com.github.dataflow.node"/>

    <mvc:annotation-driven/>

    <!--全局executor-->
    <bean id="globalExecutorServiceHolder" class="com.github.dataflow.node.model.config.GlobalExecutor">
        <property name="keepLiveTime" value="${executor.keepLiveTime:0}"/>
        <property name="corePoolSize" value="${executor.corePoolSize:2}"/>
        <property name="maxPoolSize" value="${executor.maxPoolSize:5}"/>
        <property name="blockingQueue" ref="blockingQueue"/>
    </bean>

    <bean id="blockingQueue" class="java.util.concurrent.ArrayBlockingQueue">
        <constructor-arg index="0">
            <value>16</value>
        </constructor-arg>
    </bean>

    <!--senders-->
    <!--kafka-->
    <bean id="kafkaDataSenderHandler" class="com.github.dataflow.sender.kafka.handler.KafkaDataSenderHandler"/>
    <!--activemq-->
    <bean id="activemqDataSenderHandler" class="com.github.dataflow.sender.activemq.handler.ActivemqDataSenderHandler"/>
    <!--mysql-->
    <bean id="mysqlDataSenderHandler" class="com.github.dataflow.sender.database.handler.MysqlDataSenderHandler"/>
    <!--oracle-->
    <bean id="oracleDataSenderHandler" class="com.github.dataflow.sender.database.handler.OracleDataSenderHandler"/>
    <!--hbase-->
    <!--<bean id="hbaseDataSenderHandler" class="com.github.dataflow.sender.hbase.handler.HbaseDataSenderHandler"/>-->
    <!--elasticsearch-->
    <!--<bean id="elasticsearchDataSenderHandler" class="com.github.dataflow.sender.elasticsearch.handler.ElasticsearchDataSenderHandler"/>-->

    <!--event handles-->
    <!--database-->
    <bean id="databaseDeleteEventHandler"
          class="com.github.dataflow.sender.database.event.handler.DatabaseDeleteEventHandler"></bean>
    <bean id="databaseInsertEventHandler"
          class="com.github.dataflow.sender.database.event.handler.DatabaseInsertEventHandler"></bean>
    <bean id="databaseUpdateEventHandler"
          class="com.github.dataflow.sender.database.event.handler.DatabaseUpdateEventHandler"></bean>
    <!--hbase-->
    <!--<bean id="hbaseInsertEventHandler" class="com.github.dataflow.sender.hbase.event.handler.HbaseInsertEventHandler"></bean>-->
    <!--<bean id="hbaseUpdateEventHandler" class="com.github.dataflow.sender.hbase.event.handler.HbaseUpdateEventHandler"></bean>-->
    <!--<bean id="hbaseDeleteEventHandler" class="com.github.dataflow.sender.hbase.event.handler.HbaseDeleteEventHandler"></bean>-->
    <!--elasticsearch-->
    <!--<bean id="elasticsearchInsertEventHandler" class="com.github.dataflow.sender.elasticsearch.event.handler.ElasticsearchInsertEventHandler"></bean>-->
    <!--<bean id="elasticsearchUpdateEventHandler" class="com.github.dataflow.sender.elasticsearch.event.handler.ElasticsearchUpdateEventHandler"></bean>-->
    <!--<bean id="elasticsearchDeleteEventHandler" class="com.github.dataflow.sender.elasticsearch.event.handler.ElasticsearchDeleteEventHandler"></bean>-->

    <import resource="application-dubbo.xml"/>

</beans>